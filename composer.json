{
  "name": "sirio3mil/imdb-scraper",
  "description": "Internet movie database's website scraper in PHP",
  "type": "library",
  "require": {
    "php": ">=7.2",
    "php-curl-class/php-curl-class": "@dev",
    "devster/ubench": "2.0.0",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "phpmd/phpmd": "2.6.0",
    "squizlabs/php_codesniffer": "3.4.2",
    "friendsofphp/php-cs-fixer": "3.0.x-dev"
  },
  "autoload": {
    "psr-4": {
      "ImdbScraper\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "md": "phpmd src/ text cleancode, codesize, controversial, design, naming, unusedcode",
    "cs": "phpcs src/ --standard=PSR2"
  }
}
